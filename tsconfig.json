{
  "compilerOptions": {
    "target": "esnext",
    "outDir": "./",
    "sourceMap": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "esnext",
    "lib": ["ESNext", "DOM"]
  },
  "exclude": ["**/dist", "**/node_modules", "**/test"]
}
