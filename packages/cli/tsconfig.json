{
  "compilerOptions": {
    "moduleResolution": "Node",
    "target": "ES2019",
    "outDir": "./lib",
    "module": "ESNext",
    "declaration": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*", "docs/*"],
  "exclude": ["node_modules"]
}
